<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_sell2"
    android:padding="10dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="24dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/loginHeader"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/colorAccent"
        android:text="Sell On Ecstasy"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileIv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/logo1"
        app:civ_border_color="@color/colorOrange"
        app:civ_border_width="1dp" />



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputEmail"
        style="@style/parent"
        android:alpha=".6"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/nameEt"
            style="@style/modifiedEditText"
            android:hint="Enter Your Name"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_light"
            android:inputType="textPersonName"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputPhone"
        style="@style/parent"
        android:alpha=".6">

        <EditText
            android:id="@+id/phoneEt"
            style="@style/modifiedEditText"
            android:hint="Enter Phone Number"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_light"
            android:inputType="phone"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputShopName"
        style="@style/parent"
        android:alpha=".6">

        <EditText
            android:id="@+id/shopNameEt"
            style="@style/modifiedEditText"
            android:hint="Enter Shop Name"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_light"
            android:inputType="text"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputDeliveryFee"
        style="@style/parent"
        android:alpha=".6">

        <EditText
            android:id="@+id/deliveryFeeEt"
            style="@style/modifiedEditText"
            android:hint="Enter Delivery Fee"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_light"
            android:inputType="number"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/registerBtnStep1"
        style="@style/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressEt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_gravity="right"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/colorOrange"
        android:minWidth="120dp"
        android:text="Next" />
</LinearLayout>